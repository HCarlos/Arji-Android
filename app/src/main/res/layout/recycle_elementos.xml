<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_elementos"
    android:layout_marginRight="@dimen/em2"
    android:layout_marginLeft="@dimen/em2"
    card_view:cardCornerRadius="@dimen/cvRadioCornerHijos"
    android:layout_marginBottom="@dimen/cvBottomMarginHijos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/lyElementos"
            android:layout_width="@dimen/em128"
            android:layout_height="wrap_content"
            android:layout_weight="@string/w1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/em6"
            >

            <TextView
                android:id="@+id/tvElemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/em16"
                android:textColor="@color/input_register_hint"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="@string/cvImgLeftHijos"
                />

            <TextView
                android:id="@+id/tvElemento_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/input_login_hint"
                android:layout_weight="@string/cvImgLeftHijos"
                android:text="Hola Mundo"
                android:textStyle="normal"


                />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgRightElements"
            android:src="@mipmap/ic_flecha_derecha"
            android:layout_height="@dimen/em24"
            android:layout_width="@dimen/em4"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>