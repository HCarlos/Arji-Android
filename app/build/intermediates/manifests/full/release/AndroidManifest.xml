    <application
        android:name="mx.com.logydes.colegioarji.Utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mx.com.logydes.colegioarji.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mx.com.logydes.colegioarji.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="mx.com.logydes.colegioarji.MainActivity"
            android:screenOrientation="portrait" >

            <!-- Soporte ver 4.0 o preview -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="mx.com.logydes.colegioarji.BoletinActivity"
            android:label="@string/title_activity_boletin"
            android:parentActivityName="mx.com.logydes.colegioarji.MainActivity"
            android:screenOrientation="portrait" >

            <!-- Soporte ver 4.0 o preview -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
