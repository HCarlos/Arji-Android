<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="mx.com.logydes.colegioarji.MapsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/em40"
        android:text="@string/title_bar_mapa_ubicacion"
        android:textSize="@dimen/em14"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/em4"
        android:paddingRight="@dimen/em4"
        android:background="@color/backgroud_text"
        android:elevation="@dimen/em32"
        android:elegantTextHeight="true"
        android:shadowColor="@color/bg_login"
        android:shadowDx="5"
        android:shadowDy="5"
        android:textStyle="bold"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
