<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="mx.com.logydes.colegioarji.ListaElementos"
    android:orientation="vertical"
    android:background="@drawable/background_1_arji"
    >

    <TextView
        android:id="@+id/tvMenuHijos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em32"
        android:layout_marginRight="@dimen/em8"
        android:layout_marginLeft="@dimen/em8"
        android:layout_marginBottom="@dimen/cvBottomMarginMenu"
        android:layout_marginTop="@dimen/cvBottomMarginMenu"
        android:paddingTop="@dimen/cvTopPaddingMenu"
        android:paddingLeft="@dimen/padding8dp"
        android:background="@drawable/round_corners"
        android:textColor="@color/white"
        android:gravity="left"
        android:textStyle="bold"
        android:text="OPCIONES"

        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListaElementos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMenuHijos"
        />

</RelativeLayout>
